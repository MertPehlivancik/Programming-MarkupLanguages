<%- include('partials/header'); %>

<div class="container">
	<header class="jumbotron">
			<div class="container">
				<h1>This is the campgrounds page</h1>
				<p>View our hand-picked campgrounds from all over the world</p>
				<p>
					<a class="btn btn-primary btn-lg" href="campgrounds/new">Add New Campground</a>
				</p>
			</div>
	</header>

	<form action="/campgrounds" method="post">
		<input type="text" name="name" placeholder="name">
		<input type="text" name="image" placeholder="image url">
		<button>Submit</button>
	</form>

	<div class="row">
		<table class="table">
			<div class="col-sm-3 col-md-3 col-lg-3">
				<thead>
					<tr>
					  <th scope="col">#</th>
					  <th scope="col">Code</th>
					  <th scope="col">Count</th>
					</tr>
				  </thead>
				  <tbody>
					<% campgrounds.forEach(function(campground){ %>
					<tr>
					  <%const Number = (element) => element == campground; %>
					  <th scope="row"> <%=campgrounds.findIndex(Number) + 1%> </th>
					  <td><%=campground.name%></td>
					  <td><%=campground.image%></td>
					</tr>
					<% }); %>
				  </tbody>
				</table>
			</div>
	</div>
</div>
<%- include('partials/footer'); %>